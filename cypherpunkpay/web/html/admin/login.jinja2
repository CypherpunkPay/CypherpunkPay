{% extends "layout_login.jinja2" %}

{% block content %}

    <div class="box">

        <h1 class="title has-text-link-dark">Login</h1>

        {% if message %}
            <div class="notification is-link is-light">
                {{ message }}
            </div>
        {% endif %}

        <form action="{{ request.route_url('admin_login') }}" method="post">

            <div class="field is-horizontal">
              <div class="field-label is-normal">
                <label for="username" class="label">Username</label>
              </div>
              <div class="field-body">
                <div class="field">
                  <p class="control is-expanded">
                    <input class="input" type="text" placeholder="admin" id="username" name="username" value="{{ username }}">
                  </p>
                </div>
              </div>
            </div>

            <div class="field is-horizontal">
              <div class="field-label is-normal">
                <label for="password" class="label">Password</label>
              </div>
              <div class="field-body">
                <div class="field">
                  <p class="control is-expanded">
                    <input class="input" type="password" placeholder="" id="password" name="password" value="">
                  </p>
                </div>
              </div>
            </div>

            <div class="field is-horizontal">
              <div class="field-label is-normal">
              </div>
              <div class="field-body">
                <div class="field">
                    <button type="submit" name="form.submitted" class="button is-link">Log In</button>
                </div>
              </div>
            </div>
        </form>
    </div>

{% endblock content %}
